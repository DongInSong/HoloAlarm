{
  "name": "holo-alarm",
  "version": "1.1.0",
  "description": "A desktop app to get notifications for Hololive live streams.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npx electron .",
    "electron:window": "SET ELECTRON_START_URL=http://localhost:3000 && yarn electron",
    "build": "react-scripts build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "production": "cross-env NODE_ENV=production electron .",
    "build:win64": "cross-env NODE_ENV=production electron-builder --win nsis:x64",
    "build:linux64": "cross-env NODE_ENV=production electron-builder --linux --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DongInSong/holo-alarm.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DongInSong/holo-alarm/issues"
  },
  "homepage": "https://github.com/DongInSong/holo-alarm#readme",
  "devDependencies": {
    "electron": "^25.1.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "@picocss/pico": "^1.5.10",
    "axios": "^1.10.0",
    "cross-env": "^7.0.3",
    "electron-progressbar": "^2.1.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.6.2",
    "holodex.js": "^2.0.5"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "DongInSong",
        "repo": "holo-alarm"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "img/icon.ico",
      "appId": "com.holoalarm.app"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "uninstallDisplayName": "HoloAlarm"
    },
    "directories": {
      "buildResources": "./build/",
      "output": "./dist/"
    }
  },
  "overrides": {
    "axios": "^1.10.0"
  }
}
